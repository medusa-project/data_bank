%p#notice= notice
%h1 Datasets
%table
  %thead
    %tr
      %th Key
      %th Title
      %th{:colspan => "3"}
  %tbody
    - @datasets.each do |dataset|
      %tr
        %td= dataset.title
        %td= link_to 'Show', "/datasets/#{dataset.key}"
        %td= link_to 'Edit', "/datasets/#{dataset.key}/edit"
        %td= link_to 'Destroy', "/datasets/#{dataset.key}", method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Dataset', new_dataset_path
